{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "allowJs": false,
        "outDir": "dist",
        "rootDir": "src",
        "lib": [
            "es2015"
        ]
    },
    "include": [
        "src/**/*.ts"
    ]
}